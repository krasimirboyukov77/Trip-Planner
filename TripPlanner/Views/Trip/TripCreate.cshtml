<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Your Trip</title>
    <link rel="stylesheet" href="~/css/tripCreatingStyle.css">
    <script defer src="~/js/script.js"></script>
    <!-- Mapbox CSS -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet">
    <!-- Mapbox JS -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
</head>
<body>
    <header class="header">
        <h1>Create Your Trip</h1>
        <p>Plan every step of your journey with ease!</p>
    </header>

    <main class="main-content">
        <section class="trip-form">
            <h2>Trip Details</h2>
            <form>
                <label for="trip-name">Trip Name:</label>
                <input type="text" id="trip-name" placeholder="E.g., Summer Vacation in Italy">

                <label for="start-date">Start Date:</label>
                <input type="date" id="start-date">

                <label for="end-date">End Date:</label>
                <input type="date" id="end-date">
            </form>
        </section>

        <section class="map-and-events">
            <div id="map">
                <div id="map" style="width: 100%; height: 500px;"></div>
            </div>

            <div class="event-list">
                <h2>Your Events</h2>

                <!-- Dropdown for selecting event category -->
                <label for="event-category">Select Event Type:</label>
                <select id="event-category">
                    <option value="transportation">Transportation</option>
                    <option value="event">Event</option>
                    <option value="hotel">Hotel</option>
                </select>

                <!-- Button to add events -->
                <button type="button" id="add-event-button">Add Event</button>

                <!-- Dynamic event form -->
                <div id="dynamic-form"></div>

                <!-- List of events -->
                <h3>Event Summary</h3>
                <ul id="event-list">
                    <li>No events added yet.</li>
                </ul>
            </div>
        </section>
    </main>

    <footer class="footer">
        <p>&copy; 2025 Trip Planner. All rights reserved.</p>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Dynamically retrieve the token from the backend
            const accessToken = '@ViewBag.MapboxToken';

            // Initialize the map
            mapboxgl.accessToken = accessToken;

            const map = new mapboxgl.Map({
                container: 'map',
                style: 'mapbox://styles/mapbox/streets-v11', // Map style
                center: [12.4924, 41.8902], // Longitude, Latitude
                zoom: 12 // Zoom level
            });

            // Add navigation controls
            map.addControl(new mapboxgl.NavigationControl());
        });
    </script>
</body>
</html>
