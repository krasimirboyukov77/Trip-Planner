<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Your Trip</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css">
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js" defer></script>
    <style>
        /* Global Styles */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fb;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        header {
            background-color: #007bff;
            color: white;
            width: 100%;
            padding: 2rem 0;
            text-align: center;
        }

        h1 {
            margin: 0;
            font-size: 3rem;
            font-weight: 700;
        }

        p {
            font-size: 1.2rem;
            margin-top: 0.5rem;
        }

        /* Main Content */
        .main-content {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            padding: 2rem;
            max-width: 1200px;
            width: 100%;
        }

        .trip-form,
        .event-list {
            background-color: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .trip-form label,
        .event-list label {
            font-weight: 700;
            margin-bottom: 0.5rem;
            display: block;
        }

        .trip-form input,
        .event-list input,
        .event-list select,
        .event-list button {
            width: 100%;
            padding: 0.8rem;
            margin-bottom: 1.5rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .trip-form button,
        .event-list button {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .trip-form button:hover,
        .event-list button:hover {
            background-color: #0056b3;
        }

        /* Map Section */
        #map {
            width: 100%;
            height: 400px;
            border-radius: 8px;
            background-color: #ddd;
            cursor: pointer;
        }

        /* Event List */
        .event-list h3 {
            margin-top: 0;
        }

        .event-list ul {
            list-style: none;
            padding: 0;
        }

        .event-list li {
            background-color: #f9f9f9;
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid #007bff;
            border-radius: 5px;
        }

        /* Footer */
        footer {
            width: 100%;
            text-align: center;
            padding: 1rem 0;
            background-color: #333;
            color: white;
            margin-top: 2rem;
        }


    </style>
</head>
<body>

    <!-- Header Section -->
    <header>
        <h1>Create Your Trip</h1>
        <p>Plan every step of your journey with ease!</p>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Trip Details Form -->
        <section class="trip-form">
            <h2>Trip Details</h2>
            <form>
                <label for="trip-name">Trip Name:</label>
                <input type="text" id="trip-name" placeholder="E.g., Summer Vacation in Italy">

                <label for="start-date">Start Date:</label>
                <input type="date" id="start-date">

                <label for="end-date">End Date:</label>
                <input type="date" id="end-date">
            </form>
        </section>

        <!-- Map and Events Section -->
        <section>
            <div id="map"></div>

            <div class="event-list">
                <h2>Your Events</h2>

                <!-- Event Category Dropdown -->
                <label for="event-category">Select Event Type:</label>
                <select id="event-category">
                    <option value="transportation">Transportation</option>
                    <option value="event">Event</option>
                    <option value="hotel">Hotel</option>
                </select>

                <!-- Add Event Button -->
                <button type="button" id="add-event-button">Add Event</button>

                <!-- List of Events -->
                <h3>Event Summary</h3>
                <ul id="event-list">
                    <li>No events added yet.</li>
                </ul>
            </div>
        </section>
    </main>

    <!-- Footer Section -->
    <footer>
        <p>&copy; 2025 Trip Planner. All rights reserved.</p>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const accessToken = '@ViewBag.MapboxToken'; // Replace with your Mapbox token

            // Initialize Mapbox
            mapboxgl.accessToken = accessToken;
            const map = new mapboxgl.Map({
                container: 'map', // The id of the map container
                style: 'mapbox://styles/mapbox/streets-v11',
                center: [0, 0],
                zoom: 2
            });

            // Add zoom and rotation controls
            map.addControl(new mapboxgl.NavigationControl());

            // Add event listener for 'click' on the map to add a marker
            map.on('click', (event) => {
                const { lng, lat } = event.lngLat;
                console.log(`Mouse Click at: Longitude=${lng}, Latitude=${lat}`);

                // Place the marker on the map at the clicked coordinates
                new mapboxgl.Marker({ color: 'blue' })
                    .setLngLat([lng, lat])
                    .addTo(map);
            });

            // Disable scroll zoom
            map.scrollZoom.disable();
        });
    </script>
</body>
</html>
